<%- include('partials/header'); -%>

<div class="roboto-condensed text-center bg-blue-700 text-white text-6xl py-2 sticky top-0 z-50"> <h1 class="type-category"> <%= category %> </h1></div>


<div class="trivia-appear question-navbar justify-center flex flex-row sticky z-40 mb-4 px-6 bg-blue-100">

    <p class="opacity-0 lg:opacity-100 rounded-full absolute left-0 lobster-2 bg-blue-600 text-center pl-1 py-2 pr-4 ml-6 mx-2 mt-2 mb-6 text-white text-2xl"><span class="w-1 h-1 px-3 m-4 bg-teal-500 rounded">?</span>Quiz Pro Quo</p>

    <p class="border-r-2 sm:border-b-2 sm:border-r-0 border-green-800 dotted libre-baskerville my-4 mx-1 px-1 sm:px-0 m-4 text-green-800">Number of Questions: <%= numberOfQuestions %></p>

    <form action="/questions/delete" method='get'>
        <button class="button-emphasize bg-white raleway text-center p-2 m-2 sm:ml-8 border-2 border-red-400 rounded text-red-400"type="submit">Delete Quiz</button>
    </form>


    <form action="/questions" method='get'>
        <button class="button-emphasize bg-white raleway text-center p-2 m-2 sm:ml-8 border-2 rounded border-blue-400 text-blue-400" type="submit">Refresh Page</button>
    </form>

</div>

<p class="libre-baskerville p-2 mt-4 mb-8 text-red-800 text-xl rounded-full mx-6 px-5 py-5 bg-red-300<% if (!pleaseAnswerEveryQuestion) { %>
    hidden
<% } %>"><%= pleaseAnswerEveryQuestion %></p>


<form action='/results' method='post' id='form'>

    <%- include('partials/trivia_round'); -%>

    <button type="submit" class="question-button libre-baskerville border-2 text-2xl border-blue-600 rounded p-3 my-6 text-blue-600">Submit All Answers</button>

</form>

<%- include('partials/footer'); -%>