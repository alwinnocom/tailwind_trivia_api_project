<%- include('partials/header'); -%>

<!-- HTML Pseudocode -->

<h1 class="font-sans text-center py-8 text-green-700 text-2xl">Welcome to Tailwind Trivia, a project that uses the Open Trivia API!</h1>

<h3 class=""> <%= deleteSuccessful %> </h3>

<form class="bg-green-100 flex-column" action='/questions' method='post' id='form'>

    <div class="">
        <label class="m-2" for="numberOfQuestions">Number of Questions</label>
        <input class="border-black block py-2 m-6" type="text" placeholder="Number of questions" name="numberOfQuestions">
    </div>

    <div class="">
        <label class="m-2" for="category">Category</label>
        <input class="border-black block py-2 m-6" type="text" placeholder="Category" name="category">
    </div>

    <div class="">
        <label class="m-2" for="difficulty">Difficulty</label>
        <input class="border-black block py-2 m-6" type="text" placeholder="Difficulty" name="difficulty">
    </div>

    <div class="">
        <label class="m-2" for="type">Type</label>
        <input class="border-black block py-2 m-6" type="text" placeholder="Type" name="type">
    </div>
    
    <button class="border-black block py-2 m-6" type="submit">Submit</button>

</form>

<%- include('partials/footer'); -%>